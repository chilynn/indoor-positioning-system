<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_base_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- start of header -->

    <RelativeLayout
        android:id="@+id/fragment_base_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@color/gray_light" >

        <ImageButton
            android:id="@+id/fragment_base_return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@drawable/icon_previous" />

        <TextView
            android:id="@+id/fragment_base_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/fragment_base_function_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@null" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#000" />
    </RelativeLayout>
    <!-- end of header -->


    <!-- start of content -->

    <RelativeLayout
        android:id="@+id/fragment_base_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>
    <!-- end of content -->


    <!-- start of footer -->

    <RelativeLayout
        android:id="@+id/fragment_base_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:visibility="gone" >
    </RelativeLayout>

    <!-- end of footer -->

</RelativeLayout>